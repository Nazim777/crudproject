<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/Header.ejs')%>
    <title>home page</title>
</head>
<body>
   <div class="container">
       <div class="row">
           <div class="col-sm-6 mt-5">
               <h1 class="alert alert-success text-center">Add employe data</h1>
               <form method="post">
                   <div class="mb-3">
                       <label for="form" class="form-control">name</label>
                       <input type="text" class="form-control" id="name" name="name">
                   </div>
                   <div class="mb-3">
                    <label for="form" class="form-control">position</label>
                    <input type="text" class="form-control" id="position" name="position">
                </div>
                <div class="mb-3">
                    <label for="form" class="form-control">salary</label>
                    <input type="number" class="form-control" id="salary" name="salary">
                </div>
                <button type="submit" class="btn btn-info">submit</button>
               </form>


           </div>
           <div class="col-sm-6 mt-5">
               <h1 class="alert alert-success text-center">Edit employe data</h1>

               <table class="table">
                <thead>
                  <tr>
                    <th scope="col">list</th>
                    <th scope="col">Name</th>
                    <th scope="col">Position</th>
                    <th scope="col">Salary</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% let i=1 %>
                    <% result.forEach((item)=>{ %>

                        <tr>
                            <th scope="row"><%= i++ %></th>
                            <td><%= item.name%></td>
                            <td><%= item.position%></td>
                            <td><%= item.salary%></td>
                            <td>
                                <form action="/edit/<%=item._id %>" method="get" class="d-inline">
                                    <button type="submit" class="btn">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </button>
                                </form>
                                <form action="/delete/<%=item._id%>" method="post" class="d-inline">
                                    <button type="submit" class="btn">
                                        <i class="fa-solid fa-trash-can"></i>

                                    </button>
                                </form>
                               
                               
                            </td>
                          </tr>

                   <% }) %>
                 
                 
                  
                </tbody>
              </table>




           </div>
       </div>
   </div>

    
</body>
</html>